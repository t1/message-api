<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.java.messageapi</groupId>
		<artifactId>demo-container</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>

	<groupId>chat</groupId>
	<artifactId>chat-api</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>chat-api message api</name>
	<description>The message api jar for chat-api</description>

	<dependencies>
		<dependency>
			<groupId>net.java.messageapi</groupId>
			<artifactId>api-processor</artifactId>
			<version>2.0-SNAPSHOT</version>
			<!-- the api annotation processor is required only at build time, -->
			<!-- but there's no such scope -->
			<!--scope>build</scope -->
			<!-- we trick maven by saying it was optional: -->
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>net.java.messageapi</groupId>
			<artifactId>adapter</artifactId>
			<version>2.0-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>net.java.messageapi</groupId>
			<artifactId>incoming-processor</artifactId>
			<version>2.0-SNAPSHOT</version>
			<!-- the incoming annotation processor is required only at build time, -->
			<!-- but there's no such scope -->
			<!--scope>build</scope -->
			<!-- we trick maven by saying it was optional: -->
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>6.0</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
</project>
