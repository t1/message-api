  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>net.java.messageapi:adapter</include>
                  <include>net.java.messageapi:annotations</include>
                  <include>net.java.messageapi:common</include>
                  <include>joda-time:joda-time</include>
                  <include>com.google.collections:google-collections</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>com.google.collections:google-collections</artifact>
                  <excludes>
                    <exclude>README</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>joda-time:joda-time</artifact>
                  <excludes>
                    <exclude>META-INF/LICENSE.txt</exclude>
                    <exclude>META-INF/NOTICE.txt</exclude>
                    <exclude>META-INF/maven</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
